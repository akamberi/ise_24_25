@model IEnumerable<DAL.Persistence.Entities.Assignment>

@{
    ViewData["Title"] = "Assignments";
}

<h2>Assignments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.Title</td>
                <td>@assignment.Description</td>
                <td>@assignment.DueDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@assignment.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Results" asp-route-assignmentId="@assignment.Id" class="btn btn-info">View Results</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Assignment</a>
