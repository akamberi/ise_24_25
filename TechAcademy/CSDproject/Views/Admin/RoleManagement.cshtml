@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

<form asp-action="CreateRole" method="post">
    <div class="mb-3">
        <label for="roleName">Role Name</label>
        <input type="text" name="roleName" id="roleName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Role</button>
</form>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="EditRole" method="post" class="d-inline">
                        <input type="hidden" name="roleId" value="@role.Id" />
                        <input type="text" name="newRoleName" value="@role.Name" class="form-control d-inline w-auto" />
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                    <form asp-action="DeleteRole" method="post" class="d-inline">
                        <input type="hidden" name="roleId" value="@role.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


