@model Common.DTOs.CourseModuleDto

@{
    ViewData["Title"] = "Delete Course Module";
}

<h2>Delete Course Module</h2>
<h3>Are you sure you want to delete this course module?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Course</dt>
        <dd>@Model.CourseName</dd> <!-- Optionally show course name instead of ID -->
        <dt>Content</dt>
        <dd>@Model.Content</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <!-- Hidden input to store the Id -->
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-warning">Cancel</a>
</form>
