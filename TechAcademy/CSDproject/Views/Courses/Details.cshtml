@model DAL.Persistence.Entities.Course

@{
    ViewData["Title"] = "Course Details";
}

<h2>Course Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Title</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
</div>
<p>
    <a href="/Courses/Edit/@Model.Id" class="btn btn-warning">Edit</a> |
    <a href="/Courses" class="btn btn-primary">Back to List</a>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}